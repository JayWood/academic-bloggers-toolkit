{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "scripthost",
            "es5",
            "es6",
            "es7"
        ],
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "types/**/*"
    ]
}
