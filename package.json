{
  "private": true,
  "version": "5.0.4",
  "scripts": {
    "test": "jest --coverage",
    "test-ci": "jest --coverage --runInBand && npm run build",
    "posttest": "npm run lint",
    "logs": "docker-compose logs -f wordpress | rg php7 --line-buffered | sed -e 's/^.*\\[client.*\\] \\(.*\\), referer.*/\\1/' -e 's/\\\\n/\\n/g'",
    "lint:scss": "stylelint **/*.scss",
    "lint:ts": "tslint -p . -t stylish",
    "lint": "npm run lint:scss && npm run lint:ts",
    "start": "npm run build:dev -- --watch",
    "build": "npm run webpack -- --mode production",
    "build:dev": "npm run webpack -- --mode development",
    "stats": "mkdir -p ./node_modules/.cache/academic-bloggers-toolkit && npm run --silent build -- --profile --json > ./node_modules/.cache/academic-bloggers-toolkit/stats.json",
    "deploy": "npm run zip && ./scripts/deploy.sh",
    "up": "docker-compose up -d && docker-compose logs -f wordpress",
    "down": "docker-compose down -v",
    "update-dependencies": "ts-node --files --project ./scripts/tsconfig.json ./scripts/resolve-dependencies.ts",
    "update-styles": "ts-node --project ./scripts/tsconfig.json ./scripts/update-styles.ts",
    "webpack": "TS_NODE_PROJECT=./tsconfig.node.json TS_NODE_FILES=true webpack",
    "wp": "docker-compose exec wordpress wp",
    "zip": "npm run build && ./scripts/zip.sh",
    "zip:dev": "npm run build:dev && ./scripts/zip.sh"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run update-dependencies"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/{__mocks__,__tests__}/**"
    ],
    "coverageDirectory": "node_modules/.cache/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.node.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "^(utils|components)/(.*)$": "<rootDir>/src/js/$1/$2"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testURL": "http://localhost",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    }
  },
  "dependencies": {
    "@wordpress/blocks": "^6.2.0",
    "@wordpress/components": "^7.2.0",
    "@wordpress/compose": "^3.2.0",
    "@wordpress/data": "^4.4.0",
    "@wordpress/dom-ready": "^2.2.0",
    "@wordpress/edit-post": "^3.3.0",
    "@wordpress/editor": "^9.2.0",
    "@wordpress/element": "^2.3.0",
    "@wordpress/i18n": "^3.3.0",
    "@wordpress/keycodes": "^2.2.0",
    "@wordpress/plugins": "^2.2.0",
    "@wordpress/rich-text": "^3.2.0",
    "@wordpress/url": "^2.5.0",
    "astrocite": "^0.10.0",
    "citeproc": "^2.1.228",
    "classnames": "^2.2.6",
    "common-tags": "^1.8.0",
    "focus-trap-react": "^6.0.0",
    "fuse.js": "^3.4.4",
    "he": "^1.2.0",
    "lodash": "^4.17.11",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "react": "^16.8.6",
    "react-autosuggest": "^9.4.3",
    "react-dom": "^16.8.6",
    "string-hash": "^1.1.3",
    "tooltip.js": "^1.3.1",
    "typescript": "^3.3.4000",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-react": "^7.0.0",
    "@dsifford/stylelint-config": "^0.2.0",
    "@types/classnames": "^2.2.7",
    "@types/common-tags": "^1.8.0",
    "@types/copy-webpack-plugin": "^4.4.3",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/he": "^1.1.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^11.12.1",
    "@types/react": "^16.8.10",
    "@types/react-autosuggest": "^9.3.7",
    "@types/react-dom": "^16.8.3",
    "@types/react-test-renderer": "^16.8.1",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^5.5.0",
    "@types/string-hash": "^1.1.1",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.26",
    "@wordpress/babel-plugin-makepot": "^3.0.0",
    "@wordpress/babel-preset-default": "^4.1.0",
    "@wordpress/browserslist-config": "^2.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "camaro": "^3.0.15",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "custom-event-polyfill": "^1.0.6",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.16.4",
    "proxy-polyfill": "^0.3.0",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.4",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sass-loader": "^7.1.0",
    "snapshot-diff": "^0.5.1",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-scss": "^3.5.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "tslint-react": "^4.0.0",
    "typescript-tslint-plugin": "^0.3.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  }
}
