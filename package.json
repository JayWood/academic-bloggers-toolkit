{
  "name": "academic-bloggers-toolkit",
  "version": "4.13.3",
  "description": "A plugin extending the functionality of WordPress for Academic Blogging",
  "license": "GPL-3.0",
  "repository": "dsifford/academic-bloggers-toolkit",
  "author": "Derek P Sifford",
  "scripts": {
    "test": "jest --coverage",
    "test-ci": "jest --coverage --runInBand && npm run build",
    "posttest": "npm run lint",
    "lint:scss": "stylelint **/*.scss",
    "lint:ts": "tslint -p . -t stylish",
    "lint": "npm run lint:scss && npm run lint:ts",
    "start": "TS_NODE_PROJECT=./tsconfig.jest.json webpack",
    "build": "TS_NODE_PROJECT=./tsconfig.jest.json NODE_ENV=production webpack",
    "build:stats": "mkdir -p ./node_modules/.cache/webpack && TS_NODE_PROJECT=./tsconfig.jest.json NODE_ENV=production webpack --profile --json --progress > ./node_modules/.cache/webpack/stats.json",
    "deploy": "IS_DEPLOYING=true NODE_ENV=production manifold run webpack && npm run zip && ./lib/scripts/deploy.sh",
    "inspect-bundles": "npx bundle-buddy dist/**/*.map",
    "up": "docker-compose up -d && docker-compose logs -f wordpress",
    "down": "docker-compose down -v",
    "update-translations": "TS_NODE_PROJECT=./tsconfig.jest.json manifold run ts-node ./lib/scripts/update-translations.ts",
    "update-styles": "TS_NODE_PROJECT=./tsconfig.jest.json manifold run ts-node ./lib/scripts/update-styles.ts",
    "wp": "docker-compose exec wordpress wp",
    "zip": "npm run build && ./lib/scripts/zip.sh"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "@wordpress/api-fetch": "^2.2.6",
    "@wordpress/blocks": "^6.0.4",
    "@wordpress/components": "^7.0.4",
    "@wordpress/compose": "^3.0.0",
    "@wordpress/data": "^4.1.0",
    "@wordpress/edit-post": "^3.1.6",
    "@wordpress/editor": "^9.0.6",
    "@wordpress/element": "^2.1.8",
    "@wordpress/i18n": "^3.1.0",
    "@wordpress/keycodes": "^2.0.5",
    "@wordpress/plugins": "^2.0.9",
    "@wordpress/rich-text": "^3.0.3",
    "@wordpress/url": "^2.3.2",
    "astrocite": "^0.10.0",
    "citeproc": "^2.1.210",
    "classnames": "^2.2.6",
    "common-tags": "^1.8.0",
    "focus-trap-react": "^5.0.1",
    "he": "^1.2.0",
    "lodash": "^4.17.11",
    "mobx": "^5.8.0",
    "mobx-react": "^5.4.3",
    "react": "^16.7.0-alpha.2",
    "react-autosuggest": "^9.4.2",
    "react-dom": "^16.7.0-alpha.2",
    "string-hash": "^1.1.3",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@dsifford/stylelint-config": "^0.2.0",
    "@types/classnames": "^2.2.6",
    "@types/common-tags": "^1.8.0",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/he": "^1.1.0",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-autosuggest": "^9.3.6",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "@types/string-hash": "^1.1.1",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.22",
    "@wordpress/babel-plugin-makepot": "^2.1.2",
    "@wordpress/babel-preset-default": "^3.0.1",
    "@wordpress/browserslist-config": "^2.2.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.0.2",
    "custom-event-polyfill": "^1.0.6",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "proxy-polyfill": "^0.3.0",
    "react-test-renderer": "^16.7.0",
    "rollbar": "^2.5.1",
    "rollbar-sourcemap-webpack-plugin": "^2.5.0",
    "sass-loader": "^7.1.0",
    "snapshot-diff": "^0.4.1",
    "style-loader": "^0.23.1",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-react": "^3.6.0",
    "typescript-tslint-plugin": "^0.2.1",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "whatwg-fetch": "^3.0.0",
    "wp-pot": "^1.6.5"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test && npm run lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/{vendor,__tests__}/**"
    ],
    "coverageDirectory": "node_modules/.cache/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "^(utils|components)/(.*)$": "<rootDir>/src/js/$1/$2"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testURL": "http://localhost",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
