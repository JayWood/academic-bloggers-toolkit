{
  "name": "academic-bloggers-toolkit",
  "version": "4.13.3",
  "description": "A plugin extending the functionality of WordPress for Academic Blogging",
  "license": "GPL-3.0",
  "repository": "dsifford/academic-bloggers-toolkit",
  "author": "Derek P Sifford",
  "scripts": {
    "test": "jest --coverage",
    "test-ci": "jest --coverage --runInBand && npm run build && bundlesize",
    "posttest": "npm run lint",
    "lint:scss": "stylelint **/*.scss",
    "lint:ts": "tslint -p . -t codeFrame",
    "lint": "npm run lint:scss && npm run lint:ts",
    "start": "TS_NODE_PROJECT=./tsconfig.jest.json webpack",
    "build": "NODE_ENV=production webpack",
    "deploy": "IS_DEPLOYING=true NODE_ENV=production manifold run webpack && npm run zip && ./lib/scripts/deploy.sh",
    "inspect-bundles": "npx bundle-buddy dist/**/*.map",
    "up": "docker-compose up -d && docker-compose logs -f wordpress",
    "down": "docker-compose down -v",
    "update-translations": "manifold run ts-node ./lib/scripts/update-translations.ts",
    "update-styles": "manifold run ts-node ./lib/scripts/update-styles.ts",
    "zip": "npm run build && ./lib/scripts/zip.sh"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.5",
    "astrocite": "^0.10.0",
    "citeproc": "^2.1.210",
    "common-tags": "^1.8.0",
    "focus-trap-react": "^4.0.1",
    "he": "^1.2.0",
    "mobx": "mobx4",
    "mobx-react": "^5.3.6",
    "nanoid": "^2.0.0",
    "react": "^16.6.1",
    "react-autosuggest": "^9.4.2",
    "react-dom": "^16.6.1",
    "string-hash": "^1.1.3",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@dsifford/stylelint-config": "^0.2.0",
    "@types/classnames": "^2.2.6",
    "@types/common-tags": "^1.4.0",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/he": "^1.1.0",
    "@types/jest": "^23.3.9",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.12.5",
    "@types/react": "^16.7.1",
    "@types/react-autosuggest": "^9.3.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "@types/webpack": "^4.4.18",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "bundlesize": "^0.17.0",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "custom-event-polyfill": "^1.0.6",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "husky": "^1.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "mini-css-extract-plugin": "^0.4.4",
    "mobx-react-devtools": "^6.0.3",
    "node-sass": "^4.10.0",
    "prettier": "^1.15.1",
    "proxy-polyfill": "^0.3.0",
    "react-test-renderer": "^16.6.1",
    "rollbar": "^2.5.0",
    "rollbar-sourcemap-webpack-plugin": "^2.4.0",
    "sass-loader": "^7.1.0",
    "snapshot-diff": "^0.4.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.8.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "tslint-react": "^3.6.0",
    "typescript-tslint-plugin": "0.0.5",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "whatwg-fetch": "^3.0.0",
    "wp-pot": "^1.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test && npm run lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/js/frontend.js",
      "maxSize": "15KB"
    },
    {
      "path": "./dist/js/options-page.js",
      "maxSize": "85KB"
    },
    {
      "path": "./dist/js/reference-list.js",
      "maxSize": "250KB"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/{vendor,__tests__}/**"
    ],
    "coverageDirectory": "node_modules/.cache/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "^(utils|components)/(.*)$": "<rootDir>/src/js/$1/$2"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testURL": "http://localhost",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    }
  }
}
